{
    "id" : "com.github.dalerank.akhenaten",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "24.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "akhenaten",
    "finish-args" : [
        "--filesystem=home",
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio"
    ],
    "modules" : [
        {
            "name" : "akhenaten",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DOPTION_SYSTEM_FREETYPE=ON",
                "-DOPTION_SYSTEM_HARFBUZZ=ON"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "mkdir -p _deps"
                    ]
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/nothings/stb/archive/5736b15f7ea0ffb08dd38af21067c314d6a3aae9.tar.gz",
                    "sha256" : "d00921d49b06af62aa6bfb97c1b136bec661dd11dd4eecbcb0da1f6da7cedb4c",
                    "dest" : "_deps/stb-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/madler/zlib/archive/refs/tags/v1.3.1.tar.gz",
                    "dest" : "_deps/zlib-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/libsdl-org/SDL/archive/refs/tags/release-2.32.10.tar.gz",
                    "dest" : "_deps/SDL2-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/libsdl-org/SDL_mixer/archive/refs/tags/release-2.8.0.tar.gz",
                    "dest" : "_deps/SDL2_mixer-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/pnggroup/libpng/archive/refs/tags/v1.6.50.tar.gz",
                    "dest" : "_deps/libpng-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/ocornut/imgui/archive/refs/tags/v1.92.2.tar.gz",
                    "dest" : "_deps/imgui-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/freetype/freetype/archive/refs/tags/VER-2-13-3.tar.gz",
                    "dest" : "_deps/freetype-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/harfbuzz/harfbuzz/archive/refs/tags/7.3.0.tar.gz",
                    "dest" : "_deps/harfbuzz-src",
                    "strip-components" : 1
                }
            ]
        }
    ]
}
