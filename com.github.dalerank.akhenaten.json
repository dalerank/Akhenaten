{
    "id" : "com.github.dalerank.akhenaten",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "24.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "akhenaten",
    "finish-args" : [
        "--filesystem=home",
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio"
    ],
    "modules" : [
        {
            "name" : "akhenaten",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "rm -rf _deps/freetype-src/CMakeCache.txt _deps/freetype-src/CMakeFiles || true",
                        "rm -rf _deps/harfbuzz-src/CMakeCache.txt _deps/harfbuzz-src/CMakeFiles || true",
                        "rm -rf _deps/stb-src/CMakeCache.txt _deps/stb-src/CMakeFiles || true"
                    ]
                },
                {
                    "type" : "archive",
                    "url" : "https://download.savannah.gnu.org/releases/freetype/freetype-2.13.3.tar.xz",
                    "sha256" : "0550350666d427c74daeb85d5ac7bb353acba5f76956395995311a9c6f063289",
                    "dest" : "_deps/freetype-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/harfbuzz/harfbuzz/releases/download/7.3.0/harfbuzz-7.3.0.tar.xz",
                    "sha256" : "20770789749ac9ba846df33983dbda22db836c70d9f5d050cb9aa5347094a8fb",
                    "dest" : "_deps/harfbuzz-src",
                    "strip-components" : 1
                },
                {
                    "type" : "archive",
                    "url" : "https://github.com/nothings/stb/archive/5736b15f7ea0ffb08dd38af21067c314d6a3aae9.tar.gz",
                    "sha256" : "d00921d49b06af62aa6bfb97c1b136bec661dd11dd4eecbcb0da1f6da7cedb4c",
                    "dest" : "_deps/stb-src",
                    "strip-components" : 1
                }
            ]
        }
    ]
}
