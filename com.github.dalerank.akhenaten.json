{
    "id" : "com.github.dalerank.akhenaten",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "24.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "akhenaten",
    "finish-args" : [
        "--filesystem=home",
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio"
    ],
    "modules" : [
        {
            "name" : "akhenaten",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DOPTION_SYSTEM_FREETYPE=ON",
                "-DOPTION_SYSTEM_HARFBUZZ=ON"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                { "type" : "shell", "commands" : [ "true" ] }
            ]
        }
    ]
}
